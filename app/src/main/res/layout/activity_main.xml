<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/solution"
        android:textSize="64dp"
        android:text="2+2"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_marginTop="64dp"
        android:layout_marginRight="15dp"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:textAlignment="textEnd"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="54dp"
        app:layout_constraintTop_toBottomOf="@+id/solution"
        android:layout_marginRight="15dp"></TextView>


    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#625B71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#BA68C8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="c"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_c"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="%"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_percent"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                app:icon="@drawable/baseline_backspace_24"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/btn_backspace"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="\u00f7"
                android:gravity="center"
                android:textSize="30dp"
                android:backgroundTint="#FFB74D"
                android:layout_margin="12dp"
                android:id="@+id/btn_division"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_8"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/btn_9"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="\u00d7"
                android:gravity="center"
                android:textSize="30dp"
                android:backgroundTint="#FFB74D"
                android:layout_margin="12dp"
                android:id="@+id/btn_mutipply"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_4"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/btn_6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:gravity="center"
                android:textSize="30dp"
                android:backgroundTint="#FFB74D"
                android:layout_margin="12dp"
                android:id="@+id/btn_plus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/btn_3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:gravity="center"
                android:textSize="30dp"
                android:backgroundTint="#FFB74D"
                android:layout_margin="12dp"
                android:id="@+id/btn_minus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:textSize="20dp"
                android:backgroundTint="#BA68C8"
                android:layout_margin="12dp"
                android:id="@+id/btn_ac"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/btn_0"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/btn_dotright"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="73dp"
                android:layout_height="73dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:gravity="center"
                android:textSize="30dp"
                android:backgroundTint="#FFB74D"
                android:layout_margin="12dp"
                android:id="@+id/btn_mutiply"/>

        </LinearLayout>

            
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>